# AI Data Platform Configuration
# Copy this file to .env and modify as needed
# IMPORTANT: Do NOT commit the .env file to git - it contains sensitive data!

# Application Settings
APP_NAME=AI Data Platform
VERSION=1.0.0
ENVIRONMENT=development

# Database Settings
DB_PATH=data/ai_data_platform.duckdb
DB_CONNECTION_TIMEOUT=30
DB_QUERY_TIMEOUT=300

# API Settings
API_HOST=127.0.0.1
API_PORT=8000
API_DEBUG=true
API_RELOAD=true
API_WORKERS=1

# N8N Configuration (SENSITIVE - REPLACE WITH ACTUAL VALUES)
N8N_BASIC_AUTH_PASSWORD=your-n8n-password-here
N8N_ENCRYPTION_KEY=your-encryption-key-here
N8N_API_KEY=your-n8n-api-key-here
N8N_WEBHOOK_SECRET=your-webhook-secret-here

# Production N8N Password (for prod environment)
N8N_BASIC_AUTH_PASSWORD_PROD=your-production-password-here

# Database Configuration (if using external DB)
# POSTGRES_PASSWORD=your-postgres-password-here

# OpenAI API Key (for future NLQ features)
# OPENAI_API_KEY=your-openai-api-key-here

# Data Processing Settings
DATA_INPUT_DIRECTORY=data
DATA_OUTPUT_DIRECTORY=data/processed
DATA_BATCH_SIZE=1000
DATA_MAX_FILE_SIZE_MB=100

# Logging Settings
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/ai_data_platform.log
LOG_MAX_FILE_SIZE_MB=10
LOG_BACKUP_COUNT=5

# Feature Flags
ENABLE_API=true
ENABLE_NATURAL_LANGUAGE=true
ENABLE_METRICS_CACHING=false